<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drinkgauge"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
         >
        <activity
            android:name="com.example.drinkgauge.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.drinkgauge.ProfileSetup"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.drinkgauge.PROFILESETUP" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.drinkgauge.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.drinkgauge.MAINACTIVITY" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.drinkgauge.Core"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.drinkgauge.CORE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
